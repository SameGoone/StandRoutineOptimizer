<Window x:Class="CloneRepoHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloneRepoHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel>

        <DockPanel Height="25">
            <TextBox x:Name="StandPathField" Text="/stand/path" Width="500"></TextBox>
            <Button x:Name="ChooseStandButton" Click="ChooseStandButton_Click">Choose stand</Button>
        </DockPanel>
        <ScrollViewer CanContentScroll="True" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" PanningMode="VerticalOnly" DataContext="{Binding}" Height="351">
            <StackPanel x:Name="RepoPanel" VerticalAlignment="Top" Orientation="Vertical" CanVerticallyScroll="True" SnapsToDevicePixels="True" OverridesDefaultStyle="True"></StackPanel>
        </ScrollViewer>
        <DockPanel Height="25">
            <Button Width="200" Content="Clone" x:Name="CloneButton" Click="CloneButton_Click"/>
            <Button Width="200" Content="Create SymLinks" x:Name="CreateSymLinksButton" Click="CreateSymLinksButton_Click"/>
        </DockPanel>
    </StackPanel>
</Window>
